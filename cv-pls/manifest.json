{
  "name": "[cv-pls] Helper",
  "version": "0.20.0",
  "manifest_version": 2,
  "description": "Helps to close questions on StackOverflow.com",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [

      "js/CvPlsHelper.js",

      "js/PluginSettings.js",

      "chrome/js/BackgroundSettingsDataAccessor.js",
      "chrome/js/DefaultSettings.js",
      "chrome/js/DesktopNotificationManager.js",
      "chrome/js/SettingsDataStore.js",

      "chrome/js/pages/background.js"
    ]
  },
  "options_page": "chrome/html/settings.html",
  "page_action": {
    "default_title": "[cv-pls]",
    "default_icon": "img/icon19.png",
    "default_popup": "chrome/html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://chat.stackoverflow.com/rooms/*",
        "http://chat.stackoverflow.com/transcript/*"
      ],
      "js": [

        "js/lib/jquery-1.7.1.min.js",
        "js/lib/jquery-ui-1.8.18.custom.min.js",
        "js/lib/griphandler-0.10.1.min.js",

        "js/CvPlsHelper.js",

        "js/AudioPlayer.js",
        "js/AvatarNotification.js",
        "js/ButtonsManager.js",
        "js/ChatRoom.js",
        "js/CvBacklog.js",
        "js/PluginSettings.js",
        "js/Post.js",
        "js/RequestQueue.js",
        "js/RequestStack.js",
        "js/SoundManager.js",
        "js/StackApi.js",
        "js/StatusPolling.js",
        "js/StatusRequestProcessor.js",
        "js/VoteQueueProcessor.js",
        "js/VoteRemoveProcessor.js",
        "js/VoteRequestBuffer.js",
        "js/VoteRequestFormatter.js",
        "js/VoteRequestListener.js",
        "js/VoteRequestProcessor.js",

        "chrome/js/ContentSettingsDataAccessor.js",
        "chrome/js/DefaultSettings.js",
        "chrome/js/DesktopNotificationDispatcher.js",
        "chrome/js/SettingsDataStore.js",

        "chrome/js/bootstraps/chat.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "http://stackoverflow.com/questions/*",
        "http://stackoverflow.com/q/*"
      ],
      "js": [
        "js/lib/jquery-1.7.1.min.js",
        "js/lib/putCursorAtEnd.js",

        "js/CvPlsHelper.js",

        "js/PluginSettings.js",

        "chrome/js/ClosePopup.js",
        "chrome/js/ContentSettingsDataAccessor.js",
        "chrome/js/DefaultSettings.js",
        "chrome/js/DupeSelector.js",
        "chrome/js/SettingsDataStore.js",

        "chrome/js/bootstraps/question.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs",
    "notifications",
    "http://stackoverflow.com/*",
    "https://stackoverflow.com/*",
    "http://*.stackoverflow.com/*",
    "https://*.stackoverflow.com/*",
    "http://cvbacklog.gordon-oheim.biz/*"
  ],
  "update_url": "http://cloud.github.com/downloads/cv-pls/cv-pls/updates.xml"
}